<Window x:Class="PDFFinder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PDFFinder"
        xmlns:resx="clr-namespace:PDFFinder.Properties"
        mc:Ignorable="d"
        Title="PDFFinder" Height="450" Width="480" MinHeight="450" MinWidth="250" MaxHeight="450">
    <StackPanel >
        <StackPanel Orientation="Horizontal">

            <RadioButton VerticalAlignment="Center" Margin="10 0" Checked="RadioButton_Checked" IsChecked="True" >Ua</RadioButton>
            <RadioButton    VerticalAlignment="Center" Checked="RadioButton_Checked_1" >En</RadioButton>
            <Label Content="{x:Static resx:Resources.labelSettings}" Width="113"/>
        </StackPanel>
        <Separator/>
        <Grid Margin="10 5" Grid.Column="0" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="110"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="35"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Label Content="{x:Static resx:Resources.programName}" Grid.Row="0" Grid.ColumnSpan="3"></Label>
            <Label Content="{x:Static resx:Resources.fileName}" Grid.Column="0" Grid.Row="1" Margin="0 5"></Label>
            <TextBox Grid.Column="1" Grid.Row="1" Margin="0 5 10 5"></TextBox>
            <Button Grid.Column="2" Grid.Row="1" Padding="10 0" Margin="0 5">...</Button>
        </Grid>
        <Separator/>
        <Grid Margin="10 5" Grid.Column="0" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="110"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Grid.ColumnSpan="3">Text pattern</Label>
            <Label Grid.Column="0" Grid.Row="1" Margin="0 5">Text</Label>
            <TextBox Grid.Column="1" Grid.Row="1" Margin="0 5"></TextBox>
        </Grid>
        <Separator/>
        <Grid Margin="10 5" Grid.Column="0" Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="110"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Label  Content="{x:Static resx:Resources.printerSettings}"  Grid.Row="0" Grid.ColumnSpan="3"></Label>
            <Label Content="{x:Static resx:Resources.printerName}" Grid.Column="0" Grid.Row="1" Margin="0 5"></Label>
            <ComboBox Grid.Column="1" Grid.Row="1" Margin="0 5"></ComboBox>
            <Label Content="{x:Static resx:Resources.paperFormat}"  Grid.Column="0" Grid.Row="2" Margin="0 5"></Label>
            <ComboBox Grid.Column="1" Grid.Row="2" Margin="0 5"></ComboBox>
            <Label Content="{x:Static resx:Resources.paperSource}" Grid.Column="0" Grid.Row="3" Margin="0 5"></Label>
            <ComboBox Grid.Column="1" Grid.Row="3" Margin="0 5"></ComboBox>
            <Label Content="{x:Static resx:Resources.duplex}" Grid.Column="0" Grid.Row="4" Margin="0 5"></Label>
            <CheckBox Grid.Column="1" Grid.Row="4" HorizontalAlignment="Left" VerticalAlignment="Center"></CheckBox>
        </Grid>
        <Button Content="{x:Static resx:Resources.apply}" HorizontalAlignment="Right" Grid.Column="0" Grid.Row="4" Margin="10 0" Padding="10 5"></Button>
    </StackPanel>
</Window>
