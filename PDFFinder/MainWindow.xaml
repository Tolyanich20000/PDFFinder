<Window x:Class="PDFFinder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PDFFinder"
        mc:Ignorable="d"
        Title="PDF" Height="480" Width="640" MinWidth="470">
    <StackPanel>
        <Label>Settings</Label>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="20*"></RowDefinition>
                <RowDefinition Height="20*"></RowDefinition>
                <RowDefinition Height="50*"></RowDefinition>
                <RowDefinition Height="10*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid Margin="10 5" Grid.Column="0" Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20*"></ColumnDefinition>
                    <ColumnDefinition Width="70*"></ColumnDefinition>
                    <ColumnDefinition Width="10*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="20*"></RowDefinition>
                    <RowDefinition Height="20*"></RowDefinition>
                </Grid.RowDefinitions>
                <Label Grid.Row="0" Grid.ColumnSpan="3">Default PDF program</Label>
                <Label Grid.Column="0" Grid.Row="1">Name</Label>
                <TextBox Grid.Column="1" Grid.Row="1" Margin="0 0 10 0"></TextBox>
                <Button Grid.Column="2" Grid.Row="1" Padding="10 0">...</Button>
            </Grid>
            <Grid Margin="10 5" Grid.Column="0" Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20*"></ColumnDefinition>
                    <ColumnDefinition Width="80*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="20*"></RowDefinition>
                    <RowDefinition Height="20*"></RowDefinition>
                </Grid.RowDefinitions>
                <Label Grid.Row="0" Grid.ColumnSpan="3">Text pattern</Label>
                <Label Grid.Column="0" Grid.Row="1">Text</Label>
                <TextBox Grid.Column="1" Grid.Row="1"></TextBox>
            </Grid>
            <Grid Margin="10 5" Grid.Column="0" Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20*"></ColumnDefinition>
                    <ColumnDefinition Width="80*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="20*"></RowDefinition>
                    <RowDefinition Height="20*"></RowDefinition>
                    <RowDefinition Height="20*"></RowDefinition>
                    <RowDefinition Height="20*"></RowDefinition>
                    <RowDefinition Height="20*"></RowDefinition>
                </Grid.RowDefinitions>
                <Label Grid.Row="0" Grid.ColumnSpan="3">Printer settings</Label>
                <Label Grid.Column="0" Grid.Row="1">Name</Label>
                <ComboBox Grid.Column="1" Grid.Row="1"></ComboBox>
                <Label Grid.Column="0" Grid.Row="2">Format</Label>
                <ComboBox Grid.Column="1" Grid.Row="2"></ComboBox>
                <Label Grid.Column="0" Grid.Row="3">Source</Label>
                <ComboBox Grid.Column="1" Grid.Row="3"></ComboBox>
                <Label Grid.Column="0" Grid.Row="4">Duplex</Label>
                <CheckBox Grid.Column="1" Grid.Row="4" HorizontalAlignment="Left" VerticalAlignment="Center"></CheckBox>
            </Grid>
            <Button HorizontalAlignment="Right" Grid.Column="0" Grid.Row="4" Margin="10">Apply</Button>
        </Grid>
    </StackPanel>
</Window>
