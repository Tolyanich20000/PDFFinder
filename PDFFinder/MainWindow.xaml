<Window x:Class="PDFFinder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PDFFinder"
        mc:Ignorable="d"
        Title="PDFFinder" Height="450" Width="480" MinHeight="450" MinWidth="250" MaxHeight="450">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label>Settings</Label>
            <RadioButton VerticalAlignment="Center" Margin="10 0">Ua</RadioButton>
            <RadioButton VerticalAlignment="Center">En</RadioButton>
        </StackPanel>
        <Separator/>
        <Grid Margin="10 5" Grid.Column="0" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="35"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Grid.ColumnSpan="3">Default PDF program</Label>
            <Label Grid.Column="0" Grid.Row="1" Margin="0 5">Name</Label>
            <TextBox Grid.Column="1" Grid.Row="1" Margin="0 5 10 5"></TextBox>
            <Button Grid.Column="2" Grid.Row="1" Padding="10 0" Margin="0 5">...</Button>
        </Grid>
        <Separator/>
        <Grid Margin="10 5" Grid.Column="0" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Grid.ColumnSpan="3">Text pattern</Label>
            <Label Grid.Column="0" Grid.Row="1" Margin="0 5">Text</Label>
            <TextBox Grid.Column="1" Grid.Row="1" Margin="0 5"></TextBox>
        </Grid>
        <Separator/>
        <Grid Margin="10 5" Grid.Column="0" Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Grid.ColumnSpan="3">Printer settings</Label>
            <Label Grid.Column="0" Grid.Row="1" Margin="0 5">Name</Label>
            <ComboBox Grid.Column="1" Grid.Row="1" Margin="0 5"></ComboBox>
            <Label Grid.Column="0" Grid.Row="2" Margin="0 5">Format</Label>
            <ComboBox Grid.Column="1" Grid.Row="2" Margin="0 5"></ComboBox>
            <Label Grid.Column="0" Grid.Row="3" Margin="0 5">Source</Label>
            <ComboBox Grid.Column="1" Grid.Row="3" Margin="0 5"></ComboBox>
            <Label Grid.Column="0" Grid.Row="4" Margin="0 5">Duplex</Label>
            <CheckBox Grid.Column="1" Grid.Row="4" HorizontalAlignment="Left" VerticalAlignment="Center"></CheckBox>
        </Grid>
        <Button HorizontalAlignment="Right" Grid.Column="0" Grid.Row="4" Margin="10 0" Padding="10 5">Apply</Button>
    </StackPanel>
</Window>
